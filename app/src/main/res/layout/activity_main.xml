<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivDiceOne"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:src="@drawable/dice_1"
        app:layout_constraintBottom_toTopOf="@id/btnRoll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivDiceTwo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDiceTwo"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:src="@drawable/dice_2"
        app:layout_constraintBottom_toTopOf="@id/btnRoll"
        app:layout_constraintLeft_toRightOf="@id/ivDiceOne"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_roll_text"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDiceOne" />

</androidx.constraintlayout.widget.ConstraintLayout>